{{#if message}}
<div class="redirect">
  <h3>{{message}}</h3>
</div>
{{/if}}
{{#unless loggedIn}}

<div id="login-here">
  <h1>Login</h1>
  <form>
    <label for="login-username">Username</label>
    <input type="text" name="login-username" id="login-username">
    <label for="login-password">Password</label>
    <input type="password" name="login-password" id="login-password">
    <input type="submit" >
  </form>
</div>

<div id="signup-here">
  <h1>Signup</h1>
  <form >
    <label for="signup-username">Username</label>
    <input type="text" name="signup-username" id="signup-username">
    <label for="signup-password">Password</label>
    <input type="password" name="signup-password" id="signup-password">
    <input type="submit" >
  </form>
</div>
{{/unless}}

<div id="blogpostsContainer">
{{#each blogposts as |blogpost|}}
  <div class="blogpost container">

    <div class="" onclick="toggleComments('{{blogpost.id}}')">
      <header class="blogpost-header">
        <h2>{{blogpost.title}}</h2>
        <p>Posted by {{blogpost.user.username}} on {{formatDate blogpost.createdAt}}</p>
      </header>
      <p class="blogpost-content">{{blogpost.content}}</p>
    </div>

    <div id="comments-{{blogpost.id}}" class="container comments" style="display: none">
      {{#each blogpost.comments as |commentData|}}
        {{>comment commentData}}
      {{/each}}

      <div>
        <form id="submitComment-{{blogpost.id}}">
          <label for="newComment-{{blogpost.id}}">Comment</label>
          <input type="text" name="newComment" id="newComment-{{blogpost.id}}">
          <input type="submit" value="âž• My Comment">
        </form>
      </div>

    </div>

  </div>
{{/each}}
</div>